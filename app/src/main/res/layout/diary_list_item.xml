<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/diary_list_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/diary_list_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Date"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/diary_list_item_tv_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/diary_list_item_tv_title"
        android:layout_below="@+id/diary_list_item_tv_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Entry"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>